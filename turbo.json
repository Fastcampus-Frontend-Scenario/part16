{
  "$schema": "https://turbo.build/schema.json",
  // 암시적 전역 해시 종속성을 위한 환경 변수 목록, 전역 해싱 알고리즘에 포함
  "globalEnv": ["NODE_ENV", "APP_ENV", "LOCAL", "NEXT_PUBLIC_DOMAIN"],
  // 프로젝트의 작업 종속성 그래프를 나타내는 개체
  // 규칙을 해석하여 프로젝트의 작업 출력을 적절하게 예약, 실행 및 캐시
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true,
      // 항목에 접두사를 붙이면 파이프 라인 작업이 작업 영역의 토폴로지 종속성에 따라 달라지며 접두사가 있는 작업을 먼저 완료함을 나타냄
      // build는 무조껀 한 번만 실행한다.
      "dependsOn": ["^build"]
    },
    "build": {
      // build는 무조껀 한 번만 실행한다.
      "dependsOn": ["^build"],
      // 항상 캐시 가능한 아티팩트들
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false
    }
  }
}
